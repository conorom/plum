<table>
  <thead>
    <tr>
      <th>Label</th>
      <th>URI</th>
      <th>Vocabulary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vocabulary_terms.each do |vocabulary_term| %>
      <tr>
        <td class="vocab"><%= vocabulary_term.label %></td>
