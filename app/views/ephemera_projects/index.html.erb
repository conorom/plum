<p id="notice"><%= notice %></p>

<h1>Ephemera Projects</h1>

<ul>
  <% @ephemera_projects.order(:name).each do |ephemera_project| %>
      <li><%= link_to ephemera_project.name, ephemera_project %></li>
  <% end %>
</ul>

<br>

<% if can?(:create, EphemeraProject) %>
  <%= link_to 'New Ephemera Project', new_ephemera_project_path, class: 'btn btn-primary' %>
<% end %>
