<h2>Collections</h2>
<ul>
  <% VocabularyCollection.where(vocabulary_id: @vocabulary.id).order(:label).each do |collection| %>
    <li><%= link_to collection.label, collection %></li>
  <% end %>
</ul>

<h2>Terms</h2>
<ul>
  <% VocabularyTerm.where(vocabulary_id: @vocabulary.id).order(:label).each do |term| %>
    <li><%= link_to term.label, term %></li>
  <% end %>
</ul>
