      <h2><%= pluralize(ephemera_field.errors.count, "error") %> prohibited this ephemera_field from being saved:</h2>

      <ul>
      <% ephemera_field.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
